#==============================================================================
create_nat_ape_lowres()
{
#   set_default_parameters
  weak_dec_size_list_all="32 92 162 362 642 1082 1442 1922 2432"
  cpcommand="ln -s "

  ndays=10
  restart=".true."

  # grids_folder=/work/mh0287/leonidas.public/grids/grids.spr
  top_of_atmo=80000.
  damp_height=60000.
  itime_scheme=4
  advection_substepping=3
  setup_name='nat-ape_10days'

  run_160km="yes"
  run_140km="yes"
  run_120km="yes"
  run_105km="yes"

  #---------------------------------
  # run="true"
  #==============================================================================
  iorder_sendrecv=4
  icon_comm_method=1
  use_icon_comm=".true."
  icon_comm_method=1
  division_method=104
  parallel_radiation_mode=1
  redrad_split_factor=8
 
 # use_physics_barrier=".true."
 # use_dycore_barrier=".true."

  vwind_implicitness=0.5
  dtime=200
  dt_rad=3600

  #---------------------------------
 
if [ $run_160km = yes ] ; then 
  setup_grid="iconR2B04-grid"
  resolution="160km"
  reference_nodes=1
  oneday_time=1.5
  print_grid_info

#   nodes_list=(  1  4  8  16 20) 
#   nproma_list=(16 16 20  10  8)
  nodes_list=(  1  4  8  16 )
  nproma_list=(16 16 20  10 )
  redrad_split_factor=8
  create_strong_scaling "$setup_grid" "${setup_name}"

  nodes_list=(  27)
  nproma_list=( 12)
  redrad_split_factor=6
  create_strong_scaling "$setup_grid" "${setup_name}"
fi

  #---------------------------------
if [ $run_140km = yes ] ; then
  setup_grid="iconR2B05-grid_dec-1082"
  setup_hexdec=1082
  resolution="140km"
  reference_nodes=1
  oneday_time=1.8
  print_grid_info

  redrad_split_factor=8 
  nodes_list=( 1  5 12 23)
  nproma_list=(9  9  9  9)
  create_strong_scaling "$setup_grid" "$setup_name"

  # geometric decomposition
  #division_method=1
  #create_weak_scaling "${setup_name}" 24 "$setup_hexdec" "12"

  division_method=0
  #create_weak_scaling "${setup_name}_pairop" 48 "$setup_hexdec" "12"
  create_weak_scaling "${setup_name}" 24 "$setup_hexdec" "12"

fi
 
  #---------------------------------
if [ $run_120km = yes ] ; then
  setup_grid="iconR2B05-grid_dec-362"
  setup_hexdec=362
  resolution="120km"
  reference_nodes=2
  oneday_time=1.25
  print_grid_info

  redrad_split_factor=8 
  nodes_list=( 2 6 27)
  nproma_list=(9 9 10)
  create_strong_scaling "$setup_grid" "$setup_name"
  redrad_split_factor=6
  nodes_list=( 45)
  nproma_list=(12)
  create_strong_scaling "$setup_grid" "$setup_name"

  # hex decomposition
  division_method=0
  create_weak_scaling "${setup_name}" 96 "$setup_hexdec" "12"

fi

  #---------------------------------
if [ $run_105km = yes ] ; then
  setup_grid="iconR2B05-grid_dec-1922"
  setup_hexdec=1922
  resolution="105km"
  dtime=192
  dt_rad=2880
  reference_nodes=2
  oneday_time=1.5
  print_grid_info
 
  redrad_split_factor=8 
#   nodes_list=(  2  6 12 24)
#   nproma_list=(12 12 10 10)
  nodes_list=(  6 12 24)
  nproma_list=(12 10 10)
  create_strong_scaling "$setup_grid" "$setup_name"

  # hex decomposition
  division_method=0
  create_weak_scaling "${setup_name}" 24 "$setup_hexdec" "12"

fi

}
