  max_send_recv_buffer_size=262144
#  max_send_recv_buffer_size=131072
  rrad="false"
  division_method=1
  division_file_name=""
  nlevels=96
  parallel_radiation_mode=0
  dtime=60
  dt_rad=1800
  itime_scheme=4
  vwind_implicitness=0.15
  advection_substepping=4
