#--------------------------------------------------------------------------------------------------
#
# Aqua Planet Experiment (APE) with "graupel" microphysics
#
author_list="Marco Giorgetta, Monika Esch, Rene Redler, MPIM"
#
#--------------------------------------------------------------------------------------------------
#
# This file describes an aqua planet experiment based on the non-hydrostatic atmosphere and
# a prototype of the Sapphire physics.
#
# The experiment is intialized analytically and uses constant-in-time
# boundary conditions for:
# - SST and sea ice
# - spectral solar irradiation
# - well mixed greenhouse gases CO2, CH4, N2O, CFCs
# - O3 concentration
#
# No aerosols are used
#
#--------------------------------------------------------------------------------------------------

# (1) Basic model configuration
# -----------------------------

atm_gridID="0013"
atm_refinement="R02B04"
atm_nlev=191

atm_nproma=16

#--------------------------------------------------------------------------------------------------

# (2) unset some setting of create_target_header for mistral

unset OMPI_MCA_coll_fca_enable
unset OMPI_MCA_coll_fca_priority

#--------------------------------------------------------------------------------------------------

# (3) icon_data_poolFolder

# Variables provided by the scripting mechanism

# EXPNAME                       = name of exp. in 'exp.<name>'
# basedir                       = base directory, where src/, run/ etc exist
# icon_data_poolFolder          = base directory, where grids/, input/ and setup/ exist
# nproma                        = blocking length for array dimensioning and inner loop lengths
#                                 -> deprecated. atm_nproma is used here.

# overwrite the default setting with the new path and handle daint (CSCS)

icon_rene_poolFolder="${icon_data_poolFolder:-/pool/data/ICON}/grids/private/rene/mpim"
icon_public_poolFolder="${icon_data_poolFolder:-/pool/data/ICON}/grids/public/mpim"

#--------------------------------------------------------------------------------------------------

# (4) Set variables needed by the scripting mechanism
# ---------------------------------------------------

# horizontal grid(s)
# ------------------
atm_grid_name=icon_grid_${atm_gridID}_${atm_refinement}_G

atmo_grid_folder=${icon_public_poolFolder}/${atm_gridID}
atmo_data_InputFolder=${icon_rene_poolFolder}/${atm_gridID}
atmo_dyn_grid=${atm_grid_name}.nc

# start and end date+time
# -----------------------
start_date=${start_date:="0001-01-01T00:00:00Z"}
  end_date=${end_date:=  "0001-01-01T00:01:00Z"}

calendar="360 day year"

# restart intervals
# -----------------
checkpoint_interval="PT20S"
restart_interval="PT1M"

# output intervals
# ----------------
atm_output_interval="PT20S"
atm_file_interval="PT20S"

# namelist files
# --------------
atm_namelist=NAMELIST_${EXPNAME}_atm

atmo_namelist=${atm_namelist}

#--------------------------------------------------------------------------------------------------

# (3) Define the model configuration

# atmospheric dynamics and physics
# --------------------------------
cat > ${atm_namelist} << EOF
!
&parallel_nml
 nproma           = ${atm_nproma}
 num_io_procs     = 1           ! = number ouf output files
/
&grid_nml
 dynamics_grid_filename = "${atmo_dyn_grid}"
 grid_rescale_factor    = 0.125
 grid_angular_velocity  = 0.
/
&run_nml
 num_lev          = ${atm_nlev}
 modelTimeStep    = "PT20S"
 ltestcase        = .TRUE.      ! run testcase
 ldynamics        = .TRUE.      ! dynamics
 ltransport       = .TRUE.      ! transport
 ntracer          = 3           ! number of tracers
 iforcing         = 0           ! 0: none, 1: HS, 2: ECHAM, 3: NWP
 output           = 'nml'
 msg_level        = 15          ! level of details report during integration 
 restart_filename = "${EXPNAME}_restart_atm_<rsttime>.nc"
 activate_sync_timers = .TRUE.
/
&nh_testcase_nml
 nh_test_name     = 'APE_echam'
 ape_sst_case     = 'sst_qobs'
 jw_u0            = 0.0
/
&nonhydrostatic_nml
 ndyn_substeps    = 5           ! dtime/dt_dyn
 damp_height      = 50000.      ! [m]
 rayleigh_coeff   = 0.10
 vwind_offctr     = 0.2
 divdamp_fac      = 0.004
/
&interpol_nml
 rbf_scale_mode_ll = 1
/
&sleve_nml
 min_lay_thckn    = 40.         ! [m]
 top_height       = 83000.      ! [m]
 stretch_fac      = 0.9
 decay_scale_1    = 4000.       ! [m]
 decay_scale_2    = 2500.       ! [m]
 decay_exp        = 1.2
 flat_height      = 16000.      ! [m]
/
&diffusion_nml
/
&transport_nml
!                   hus,clw,cli
  ivadv_tracer     =   3, 3,  3
  itype_hlimit     =   3, 4,  4
  ihadv_tracer     =  52, 2,  2
/
EOF

#--------------------------------------------------------------------------------------------------

# (4) Define the input

# model files
#
add_link_file ${basedir}/data/lsdata.nc                                 ./
add_link_file ${basedir}/data/ECHAM6_CldOptProps.nc                     ./

# namelist files
#
add_required_file ${basedir}/$rundir/${atm_namelist}                        ./

# dictionary file for output variable names
#
dict_file="dict.${EXPNAME}"
cat dict.iconam.mpim  > ${dict_file}
add_required_file ${basedir}/$rundir/${dict_file}                           ./

# atmosphere grid
#
add_required_file ${atmo_grid_folder}/${atmo_dyn_grid}                  ./

#--------------------------------------------------------------------------------------------------

# (5) Define the output

# Parameters for all output files
# -------------------------------
cat >> ${atm_namelist} << EOF
&io_nml
 output_nml_dict  = "${dict_file}"
 netcdf_dict      = "${dict_file}"
 itype_pres_msl   = 4
 restart_file_type= 5
 !restart_write_mode = "joint procs multifile"
/
EOF

# Define output files
# -------------------
#
output=no
if [[ "$output" == "yes" ]]; then
cat >> ${atm_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_vgr"
 filename_format  = "<output_filename>_<levtype_l>"
 filetype         = 5
 remap            = 0
 output_grid      = .TRUE.
 output_start     = "${start_date}"           ! output_start = output_end
 output_end       = "${start_date}"           ! --> write once only irrespective of
 output_interval  = "${atm_output_interval}"  !     the output interval and
 file_interval    = "${atm_file_interval}"    !     the file interval
 ml_varlist       = 'zghalf'  , 'zg'      , 'dzghalf'
/
EOF
fi

output=yes
if [[ "$output" == "yes" ]]; then
cat >> ${atm_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_pdt"
 filename_format  = "<output_filename>_<levtype_l>_<datetime2>"
 filetype         = 5
 remap            = 0
 output_grid      = .TRUE.
 output_start     = "${start_date}"
 output_end       = "${end_date}"
 output_interval  = "${atm_output_interval}"
 file_interval    = "${atm_file_interval}"
 include_last     = .FALSE.
 ml_varlist       = 'ps'      , 'pfull'   ,
                    'rho'     , 'ta'      ,
/
EOF
fi

output=yes
if [[ "$output" == "yes" ]]; then
cat >> ${atm_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_uvw"
 filename_format  = "<output_filename>_<levtype_l>_<datetime2>"
 filetype         = 5
 remap            = 0
 output_grid      = .TRUE.
 output_start     = "${start_date}"
 output_end       = "${end_date}"
 output_interval  = "${atm_output_interval}"
 file_interval    = "${atm_file_interval}"
 include_last     = .FALSE.
 ml_varlist       = 'ua'      , 'va'      , 'wa'      ,
/
EOF
fi

output=yes
if [[ "$output" == "yes" ]]; then
cat >> ${atm_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_vwi"
 filename_format  = "<output_filename>_<levtype_l>_<datetime2>"
 filetype         = 5
 remap            = 0
 output_grid      = .TRUE.
 output_start     = "${start_date}"
 output_end       = "${end_date}"
 output_interval  = "${atm_output_interval}"
 file_interval    = "${atm_file_interval}"
 include_last     = .FALSE.
 ml_varlist       = 'q1'      , 'q2'      , 'q3'      ,
/
EOF
fi

#--------------------------------------------------------------------------------------------------
