/
EOF
fi

output=yes
if [[ "$output" == "yes" ]]; then
  num_io_procs=$((num_io_procs+1))
  cat >> ${atm_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_clw"
 filename_format  = "<output_filename>_<levtype_l>_<datetime2>"
 filetype         = 5
 remap            = 0
 output_grid      = .TRUE.
 output_start     = "${start_date}"
