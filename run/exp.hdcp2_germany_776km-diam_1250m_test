 itype_comm     = 1
 iorder_sendrecv = 1
/
&grid_nml
 cell_type = 3            ! triangular cells
 dynamics_grid_filename  = ${dynamics_grid_filename}
 !radiation_grid_filename = ${radiation_grid_filename}
 radiation_grid_filename = ' '
 dynamics_parent_grid_id = 0,1
 lredgrid_phys           = .true.,.true.
 lfeedback               = .true.
 ifeedback_type          = 2
 l_limited_area          = .true.
/
&limarea_nml
 itype_latbc     = 1
