 latbc_filename  = '<path>prep1250miconR<nroot>B<jlev>_DOM01_<timestamp>.nc'
/
&prepicon_nml
  i_oper_mode = 3           ! operation mode
  nlev_in     = 50          ! number of levels of input data
  zpbl1       = 500. 
  zpbl2       = 1000. 
  l_w_in      = .true.
  l_sfc_in    = .true.
/
&nh_testcase_nml
