 iadv_rcf = 5
 lhdiff_rcf = .true.
 divdamp_fac = 0.004
 divdamp_order = 4
 l_open_ubc    = .true. ! .true.
 l_nest_rcf   = .true.
 igradp_method = 3
 l_zdiffu_t    = .true.
 thslp_zdiffu   = 0.02
 thhgtd_zdiffu  = 125.
 htop_moist_proc = 22500.
 hbot_qvsubstep  = 24000.
/
&sleve_nml
 min_lay_thckn   = 20.
 top_height      = 21000. ! 75000.
 stretch_fac     = 0.9
