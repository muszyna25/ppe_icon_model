 divavg_cntrwgt = 0.50
 lcoriolis      = .TRUE.
/
&transport_nml
 ctracer_list  = '12345'
 ivadv_tracer  = 3,3,3,3,3
 itype_hlimit = 3,4,4,4,4,0
 ihadv_tracer  = 32,2,2,2,2,0
/
&diffusion_nml
 hdiff_order      = 5
 itype_vn_diffu   = 1
 itype_t_diffu    = 2
 hdiff_efdt_ratio = 25.
 hdiff_smag_fac   = 0.015
 lhdiff_vn        = .TRUE.
 lhdiff_temp      = .TRUE.
 hdiff_multfac    = 1.0
 hdiff_tv_ratio   = 1.0
/
&interpol_nml
 nudge_zone_width  = -1
 lsq_high_ord      = 2
/
&gridref_nml
 grf_intmethod_e  = 6
 grf_tracfbk      = 2
