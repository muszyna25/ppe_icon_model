 irad_o2          = 0           ! 0: no o2
 irad_cfc11       = 0           ! 0: no cfc11
 irad_cfc12       = 0           ! 0: no cfc12
 irad_aero        = 0           ! 0: no aerosol
 isolrad          = 5           ! 5: solar constant 433.3371 W/m^2 at 1 AE for RCE
 ldiur            = .FALSE.     ! no diurnal cycle, .TRUE. for diurnal cycle
/
&psrad_nml
rad_perm          = 1           ! Integer for perturbing random number seeds
/
&psrad_orbit_nml
cecc        = 0.0
cobld       = 0.0
l_orbvsop87 = .FALSE.
l_sph_symm_irr = .TRUE.
/
&echam_conv_nml
/
&echam_cloud_nml
/
&gw_hines_nml
/
EOF

