echo "- EXPERIMENT   = ${EXPERIMENT:?   is not defined --> ERROR}"
echo "- TYPES        = ${TYPES:?        is not defined --> ERROR}"
echo "- DATES        = ${DATES:?        is not defined --> ERROR}"
