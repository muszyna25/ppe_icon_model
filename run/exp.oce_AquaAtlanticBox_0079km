#-----------------------------------------------------------------------------
# the namelist filename
ocean_namelist=NAMELIST_${EXPNAME}
#-----------------------------------------------------------------------------
# global timing
start_date="2001-01-01T00:00:00Z"
  end_date="2101-01-01T00:00:00Z"
#
#-----------------------------------------------------------------------------
# model timing
((  years_checkp  = 10  ))  # write restart file interval [days]
((  years_restart = 30 ))   # stop model for restart [days]
((  days_data    = 30  ))   # ocean model output interval hours [hours] - for test runs
(( hour           = 3600    ))
(( day            = 24*hour ))
(( year           = 365 *  day))
#
#-----------------------------------------------------------------------------
# calculate model timesteps using $ndays
(( dt_data        = days_data   * day ))      # used for output_bounds and buildbot
(( dt_checkpoint  = years_checkp  * year ))
(( dt_restart     = years_restart * year ))
(( dt_file        = days_file    * day ))
(( simLength      = dt_restart > dt_file ? dt_file : dt_restart ))
(( steps_per_file = 120 ))       # output intervals per file interval
#
LOC='POOL'
#grids_folder="/pool/data/ICON/ocean_data/ocean_grid/"
ocean_grids="AtlanticAquaBox_0079km.nc"
#-----------------------------------------------------------------------------
#
# write namelist parameters
# -------------------------
# For a complete list see Namelist_overview.pdf
#
cat > ${ocean_namelist} << EOF
!
&parallel_nml
 nproma       = ${nproma}
 l_fast_sum   = .true.
 p_test_run   = .false.
 division_method = 102
/
&grid_nml
 dynamics_grid_filename = "${ocean_grids}",
 use_dummy_cell_closure = .true.
 use_duplicated_connectivity = .false.
/
&dynamics_nml
 iequations  = -1       ! -1: hydrost. ocean model
/
&run_nml
 dtime       = 1800         ! model timestep in seconds
 output      = 'nml'        ! namelist controlled output scheme
 activate_sync_timers = .TRUE.
 profiling_output     = 2
 msg_timestamp        = .FALSE.
/
&output_nml
 output_filename  = "oce_AquaAtlanticBox_0079km"
 filename_format  = "<output_filename>_<datetime2>"
 output_start     = "${start_date}"                  ! start in ISO-format
 output_end       = "${end_date}"                    ! end in ISO-format
 output_interval  = "P30D"                          ! "PT06H"                !"P02D"          
 steps_per_file   = 120
 output_grid      = .true.
 ml_varlist       =  'group:oce_essentials','A_tracer_v_T'
/
&dbg_index_nml
  idbg_mxmn=1                     ! initialize MIN/MAX  debug output
  idbg_val =0                     ! initialize one cell debug output
  idbg_slev=1                     ! initialize start level for debug output
  idbg_elev=5                      ! initialize end level for debug output
  dbg_lat_in=   30.0              ! latitude location of one cell debug output
  dbg_lon_in=  -30.0              ! longitude location of one cell debug output
  str_mod_tst='all'               ! define modules to print out in debug mode
/
&ocean_dynamics_nml
!n_zlev             =   32
!dzlev_m(1:32)      =   14.0,   12.0,   12.0,   12.0,   12.0,   12.0,   13.0,   15.0,   20.0,   25.0,
!                       30.0,   35.0,   40.0,   45.0,   50.0,   55.0,   60.0,   70.0,   80.0,   90.0,
!                      100.0,  110.0,  120.0,  130.0,  140.0,  150.0,  160.0,  170.0,  180.0,  190.0,
!                      200.0,  220.0
 n_zlev             =   20
 dzlev_m(1:20)      =   14.0,   12.0,   15.0,   18.0,   21.0,   25.0,   30.0,   40.0,   60.0,   80.0,
                       100.0,  120.0,  150.0,  180.0,  210.0,  240.0,  270.0,  300.0,  350.0,  400.0
  l_edge_based    = .TRUE.              ! edge- or cell-based mimetic discretization
  l_partial_cells = .FALSE.              ! partial bottom cells=true: local varying bottom depth
  i_bc_veloc_bot     = 1                 !  0/1=bottom friction off/on
  i_bc_veloc_top     = 3                 !  forced by the difference of wind-ocean velocity, smoothed
  select_solver      = 2                 !  1=gmres_oce_old; 2=ocean_restart_gmres
  solver_tolerance   = 1.0E-14           !  absolute (new) or relative (gmres_oce_old) - to be checked
  solver_max_iter_per_restart   = 25     !  inner solver loop without syncing (default: 200)
  solver_max_restart_iterations = 50    !  outer (restart solver) loop with syncing (default: 100)
  fast_performance_level        = 12
! use_continuity_correction     = .true.
/
&ocean_tracer_transport_nml
! no_tracer             = 2      ! tracer-transport: 0=no transport, 1=temperature, 2=temp. and salinity
! FLUX_CALCULATION_HORZ = 5      ! 1=upwind, 2=central, 3=Lax-Friedrichs, 4=Miura, 5=FCT with Zalesak limiter (default)
! FLUX_CALCULATION_VERT = 7      ! 6=adpo; 7=upwind biased ppm (default); 8=FCT with zalesak limiter
  ! define low and high order methods to be used in horizontal flux corrected transport methods (flux_calculation_horz=4,5)
  threshold_min_T       =  0.0   ! to avoid abort
/
&ocean_diffusion_nml
  HORZ_VELOC_DIFF_TYPE = 3        ! 3: calculate varying horizontal viscosity coefficient according to Munk criterion
! k_veloc_h            = 7.5E+4   ! [m2/s] constant horizontal viscosity coefficient for velocity
  k_veloc_v            = 5.0E-5   ! [m/s]  vertical background viscosity coefficient for velocity
  MAX_VERT_DIFF_VELOC  = 5.0E-3   ! max vertical velocity viscosity for convection used in case of instability
  k_pot_temp_h         =  200.0   ! [m2/s] constant horizontal diffusion coefficient for temperature
  k_pot_temp_v         = 1.0E-5   ! [m/s]  vertical background diffusion coefficient for temperature
  k_sal_h              =  200.0   ! [m2/s] constant horizontal diffusion coefficient for salinity
  k_sal_v              = 1.0E-5   ! [m/s]  vertical background diffusion coefficient for salinity
  MAX_VERT_DIFF_TRAC   = 0.1      ! max vertical tracer diffusion for convection used in case of instability
/
&ocean_physics_nml
  i_sea_ice          =    0      ! 0 = no sea ice; 1 = Winton; 2 = Semtner
  richardson_veloc   = 2.0e-3    ! factor for vertical viscosity coefficient in PP scheme
  richardson_tracer  = 2.0e-3    ! factor for vertical diffusion coefficient in PP scheme
  ! l_constant_mixing  = .true.
  bottom_drag_coeff  = 2.5E-3
/
&ocean_forcing_nml
  iforc_oce = 11
  forcing_windstress_u_type = 111
  forcing_windstress_v_type = 0 ! 106
  forcing_wind_u_amplitude = 0.25
  forcing_smooth_steps            = 1
  temperature_relaxation          = 4
  relax_temperature_min           = 2.0
  relax_temperature_max           = 18.0
  init_oce_relax                  = 2
  forcing_temperature_poleLat     = 45.0
  relaxation_param                = 0.3
/
&ocean_initialConditions_nml
  initial_salinity_type      = 200  ! 202    
  initial_salinity_top       = 34.8
  initial_salinity_bottom    = 35.2
  initial_temperature_type   = 212
  initial_temperature_top    = 18.0 
  initial_temperature_bottom = 3.0
/
&io_nml
  dt_checkpoint = ${dt_checkpoint}
  lkeep_in_sync = .FALSE.          ! sync after each timestep
  ! use_set_event_to_simstep = .false. 
/
EOF
#-----------------------------------------------------------------------------
# add standard atmo_non-hydrostatic_files
. ${thisdir}/add_required_ocean_files
