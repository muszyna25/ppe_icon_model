#   mv temp.grb   ${grbfile}
# done

  scp -r grb_data/${EXPNAME}_icon${res}_DOM01_${inidate}_0001_*_*.grb \
    oflxs04:/uwork1/mkoehler/icon/experiments/${EDIR}
fi

