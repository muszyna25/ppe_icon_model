##  add_link_file $datadir/bc_aeropt_kinne_sw_b14_coa.nc                  ./bc_aeropt_kinne_sw_b14_coa_${year}.nc
##  add_link_file $datadir/bc_aeropt_kinne_sw_b14_fin_${year}.nc          ./
