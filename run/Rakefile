                status.ljust(STATE_COLUMNS_WIDTH,' '),
                name.ljust(NAME_COLUMN_WIDTH,' '),
                lastDate.rjust(DATE_COLUMN_WIDTH,' '),
                id,info,script,logfile,
              ].join(' | ') << "\n"
            end
          }
