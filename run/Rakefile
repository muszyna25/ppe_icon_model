# HELP {{{ ====================================================================
desc "Show detailed help"
task :help do
  puts "F1!"
  sh "rake -T"
  pp @allTemplates
  pp Rake::Task.tasks.map(&:name)
end
desc "Run almost all targets"
task :selfCheck do
  dbg(Rake::Task.tasks)
  Rake::Task.tasks.each {|t| 
    puts t.name
    t.invoke unless %w[check clean clobber].include?(t.name)
  }
end
task :showSubmit do
  require 'pp'

  puts 'HOST is:'
  pp @jobHost
  puts 'SUBMITs is: '
  pp @jobSubmit
  pp @jobSubmit[@jobHost.to_sym]
end
