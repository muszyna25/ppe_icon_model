 itype_hlimit     =   3,  4,  4,  3
 ihadv_tracer     =  52,  2,  2, 52
/
&echam_phy_nml
!
! domain 1
! --------
!
! atmospheric phyiscs (""=never)
 echam_phy_config(1)%dt_rad = "PT8M"
 echam_phy_config(1)%dt_vdf = "PT4M"
 echam_phy_config(1)%dt_cnv = "PT4M"
