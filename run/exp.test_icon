#!/bin/ksh
#################### functions ##########################################
function copy_experiment
{
typeset MODEL_DIR EXP_ORI EXP_NEW
MODEL_DIR=$1
EXP_ORI=$2
EXP_NEW=$3
cd ${MODEL_DIR}/experiments
if [ ! -d "${EXP_ORI}" ]; then
  echo 'no experiment '${EXP_ORI}' found'
  exit 1
fi
if [ ! -f ${EXP_ORI}/restart.info -o ! -f ${EXP_ORI}/${EXP_ORI}_restart_atm_${RESTART_DATE}.nc ]; then
  echo -e "\033[31mThe run ${EXP_ORI} did not write any restart at ${RESTART_DATE}\033[00m"
  exit 1
fi
rm -rf ${EXP_NEW}
mkdir ${EXP_NEW}
cd ${EXP_NEW}
cp ../${EXP_ORI}/restart.info .
cp ../${EXP_ORI}/${EXP_ORI}_restart_atm_${RESTART_DATE}.nc .
ln -sf ${EXP_ORI}_restart_atm_${RESTART_DATE}.nc restart_atm_DOM01.nc
}
#------------------------------------------------------------------------
function print_mode
{
typeset MOD
MOD=$1
case $MOD in  
  'b') PRINT_MD='b(ase)';;
  'u') PRINT_MD='u(pdate)';;
  'r') PRINT_MD='r(estart)';;
  'n') PRINT_MD='n(proma)';;
  'm') PRINT_MD='m(pi)';;
  'o') PRINT_MD='o(mp)';;
    *) PRINT_MD=$MOD;;
esac
echo "test mode is $PRINT_MD"
}
#------------------------------------------------------------------------
function print_usage
{
typeset COMMAND MOD_ARG
COMMAND=$1
MOD_ARG=""
for MOD in $MODES; do
  case $MOD in  
    'b') MD='b(ase)';;
    'u') MD='u(pdate)';;
    'r') MD='r(estart)';;
    'n') MD='n(proma)';;
    'm') MD='m(pi)';;
    'o') MD='o(mp)';;
      *) MD=$MOD;;
  esac
  MOD_ARG=$MOD_ARG'|'$MD
done 
echo "usage: ${COMMAND} [-e] [-h] [-m $MOD_ARG] [-o yes|no] [-r <reference model path>]" 
echo '-e : experiment:'
echo '     r2b4_amip (hydrostatic amip experiment) (default)'
echo '     mtest_nat_rce_cbl_120km_nwp (non-hydrostatic, radiative-convective equilibrium, nwp physics, torus grid'
echo '-f : '"'yes'"': force make_runscripts even if runscripts exist'
echo '     '"'no'"': perform make_runscripts only if no runscripts are available (default)'
echo '-h : display help'
echo '-m : test mode, either single tests like base, update, restart, nproma, mpi or omp test'
echo '     or combined tests like ur (update and restart) possible'
echo '-o : '"'yes'"': overwrite existing experiments (default)'
echo '     '"'no'"': use existing experiments'
echo '-r : reference model path'
}
#------------------------------------------------------------------------
function diff_results
{
typeset MODEL_DIR1 DEXP1 MODEL_DIR2 DEXP2 TEST FILES FILE1 FILE2 STATUS
MODEL_DIR1=$1
DEXP1=$2
MODEL_DIR2=$3
DEXP2=$4
TEST=$5
#TYPES: defined in main script and used from main script 
#DATES: defined in main script and used from main script 
DIFF_STATUS=0
#create more beautiful output for variables MODEL_DIR[12]
cd $MODEL_DIR1; MODEL_DIR1=`pwd`
cd $MODEL_DIR2; MODEL_DIR2=`pwd`
for TYPE in $TYPES; do 
  cd ${MODEL_DIR1}/experiments/${DEXP1}
  FILES=''
  for DATE in $DATES; do
    FILES=$FILES' '${DEXP1}'_'${TYPE}'_'${DATE}'.nc'
  done
  cdo -O mergetime $FILES ${DEXP1}_${TYPE}.nc 1> /dev/null 2> /dev/null
  cd ${MODEL_DIR2}/experiments/${DEXP2}
  FILES=''
  for DATE in $DATES; do
    FILES=$FILES' '${DEXP2}'_'${TYPE}'_'${DATE}'.nc'
  done
  cdo -O mergetime $FILES ${DEXP2}_${TYPE}.nc 1> /dev/null 2> /dev/null
  cdo -O sub ${DEXP2}_${TYPE}.nc ../${DEXP1}/${DEXP1}_${TYPE}.nc diff_${DEXP2}-${DEXP1}_${TYPE}.nc 1> /dev/null 2> /dev/null
  if [ -z "${REMAP_FILE}" ]; then
    cdo remapdis,${RESOL} diff_${DEXP2}-${DEXP1}_${TYPE}.nc diff_${DEXP2}-${DEXP1}_${TYPE}_${RESOL}.nc 1> /dev/null 2> /dev/null
  else
    if [ -f "${REMAP_FILE}" ]; then
      cdo remap,${RESOL},${REMAP_FILE} diff_${DEXP2}-${DEXP1}_${TYPE}.nc diff_${DEXP2}-${DEXP1}_${TYPE}_${RESOL}.nc 1> /dev/null 2> /dev/null
    fi
  fi
  if [ -f test$$.dat ]; then
    rm -f test$$.dat
  fi
  FILE1=${MODEL_DIR1}/experiments/${DEXP1}/${DEXP1}_${TYPE}.nc
  FILE2=${MODEL_DIR2}/experiments/${DEXP2}/${DEXP2}_${TYPE}.nc
  cdo diffn ${FILE1} ${FILE2} > test$$.dat
  STATUS=`echo $?`
  if [ "$STATUS" -ne 0 -o -s test$$.dat ]; then
    echo -e "\033[31m${TEST} test FAILED:\033[00m"
    echo -e "The variables in files ${FILE1} and ${FILE2} differ or the files cannot be compared"
    DIFF_STATUS=$((DIFF_STATUS + 1))
  fi
done # file types 
if [ -s test$$.dat ]; then
  mv test$$.dat diff_${DEXP2}-${DEXP1}.dat
  echo -e "\033[31mThe differences are in file diff_${DEXP2}-${DEXP1}.dat\033[00m"
else
  rm -f test$$.dat
fi
if [ "$DIFF_STATUS" == 0 ]; then
  echo -e "\033[32m${TEST} o.k.:\033[00m"
  echo -e "The variables in files ${MODEL_DIR1}/experiments/${DEXP1}/${DEXP1}_TYPE.nc and ${MODEL_DIR2}/experiments/${DEXP2}/${DEXP2}_TYPE.nc for TYPE=${TYPES} do not differ"
fi
#echo $DIFF_STATUS
#exit $DIFF_STATUS
}
#------------------------------------------------------------------------
function string_in_list
{
typeset STR_IN_LIST STR
STR_IN_LIST=false
STR=$1
N=$#
M=2
LIST=""
while [ $M -le $N ]; do
ARG=$(eval echo \${$M})
LIST=$LIST" "$ARG
M=$(( M + 1 ))
done
for ELEMENT in $LIST; do
if [ "$STR" == $ELEMENT ]; then
STR_IN_LIST=true
fi
done 
if [ "$STR_IN_LIST" == 'true' ]; then
  return 0
else
  return 1
fi
}
#################### main script ########################################
SCRIPT_DIR=`pwd`
MODEL_DIR=${SCRIPT_DIR}/../
EXPERIMENT='r2b4_amip'
FORCE_MRS='no'
MD='rnmo'  #MD is equal to MODE but abbreviated test-mode names
REFERENCE=''
OVERWRITE='yes'
#
if [[ "$LOADLBATCH" ]]; then
# change for blizzard
  PATH=/client/bin:$PATH
fi 
MODES="b u r n m o ur un um uo rn rm ro nm no mo urn urm uro unm uno umo rnm rno rmo nmo urnm urno urmo unmo rnmo urnmo"
while getopts ":e:f:hm:o:r:" OPT; do
case $OPT in
 e  ) EXPERIMENT=$OPTARG
      if [ "$EXPERIMENT" != 'r2b4_amip' -a "$EXPERIMENT" != 'mtest_nat_rce_cbl_120km_nwp' ]; then
      print_usage $0
      exit 1
      fi
      ;;
 f  ) FORCE_MRS=$OPTARG
      if [ "$FORCE_MRS" != 'yes' -a "$FORCE_MRS" != 'no' ]; then
      print_usage $0
      exit 1
      fi
      ;;
 h  ) print_usage $0
      exit 1 ;;
 m  ) MODE=$OPTARG 
      case $MODE in
        'base')     MD='b';;
        'update')   MD='u';;
        'restart')  MD='r';;
        'nproma')   MD='n';;
        'mpi')      MD='m';;
        'omp')      MD='o';;
            *)      MD=$MODE;;
      esac
      if ! string_in_list $MD $MODES; then
        print_usage $0
        exit 1
      fi 
      ;;
 o  ) OVERWRITE=$OPTARG
      if [ "$OVERWRITE" != 'yes' -a "$OVERWRITE" != 'no' ]; then
      print_usage $0
      exit 1
      fi
      ;;
 r  ) REFERENCE=$OPTARG
      CMODES="u ur un um uo urn urm uro unm uno umo urnm urno urmo unmo urnmo"
      if string_in_list $MD $CMODES; then
        if [ ! -d ${REFERENCE}/run ]; then
	   echo -e '\033[31myou asked for an update test, but no reference model found\033[00m'
	   echo "reference model ${REFERENCE} does not exist"
	   exit 1
	 fi
      fi
      ;;
esac
done
if [ "${EXPERIMENT}" == 'r2b4_amip' ]; then
  TYPES='atm_phy atm_dyn lnd_phy'
  DATES='19780101T004000Z 19780101T004500Z 19780101T005000Z 19780101T005500Z 19780101T010000Z'
  RESOL='t63grid'
  REMAP_FILE='/pool/data/ICON/grids/private/r2b4_amip/remapdis_r2b4_amip_cell_t63grid.nc'
  RESTART_DATE='19780101T003000Z'
fi
if [ "${EXPERIMENT}" == 'mtest_nat_rce_cbl_120km_nwp' ]; then
  TYPES='atm'
  DATES='20080801T004000Z 20080801T005000Z 20080801T010000Z'
  RESOL='r320x20'
  REMAP_FILE=''
  RESTART_DATE='20080801T003000Z'
fi
echo $MD
print_mode $MD
CMODES="u ur un um uo urn urm uro unm uno umo urnm urno urmo unmo urnmo"
if string_in_list $MD $CMODES; then
  if [ -z "${REFERENCE}" ]; then
    echo -e '\033[31mno reference model was specified, use -r option to specify one\033[00m'
    print_usage $0
    exit 1
  else
    echo "reference model is ${REFERENCE}"
  fi
# get standardized paths
  cd ${REFERENCE}; REFERENCE=`pwd`
  cd ${MODEL_DIR}; MODEL_DIR=`pwd`
  if [ "${REFERENCE}" == "${MODEL_DIR}" ]; then
    echo 'reference model and test model are the same'
    exit 1
  fi
fi
SCRIPT=${EXPERIMENT}_test
EXP1=${EXPERIMENT}_base
EXP2=${EXPERIMENT}_restart
EXP3=${EXPERIMENT}_nproma
EXP4=${EXPERIMENT}_mpi
EXP5=${EXPERIMENT}_omp
EXIT_STATUS=0
cd ${MODEL_DIR}/
STATUS=$?
if [ "${STATUS}" == 0 ]; then
  echo "found model ${MODEL_DIR}"
else
  echo "no model ${MODEL_DIR} found"
  exit
fi
rm -f ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
echo "Output will be in exp.${EXPERIMENT}_$$.output of"
echo "$SCRIPT_DIR"
if [ ! -f run/exp.${SCRIPT}.run -o "$FORCE_MRS" == 'yes' ]; then
  ${MODEL_DIR}/make_runscripts ${SCRIPT} 1> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
fi
if [ ! -d experiments ]; then
  mkdir experiments
fi
#
# check if the test runscript exists
#
if [ ! -f run/exp.${SCRIPT}.run ]; then
  echo "did not find base runscript run/exp.${SCRIPT}.run"
  exit 1
else
  echo "found runscript run/exp.${SCRIPT}.run"
fi
# find out on which system we are
#
TARGET_MACHINE=`grep "# target machine is " run/exp.${SCRIPT}.run`
TARGET_MACHINE=${TARGET_MACHINE#'# target machine is '}
#
#################### perform base run without restart ####################
if [ "${OVERWRITE}" == 'yes' -o ! -d ${MODEL_DIR}/experiments/${EXP1} ]; then
  cd run
  RUN_SCRIPT=exp.${EXP1}.run
  cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
  sed -i.sedbak s/${SCRIPT}/${EXP1}/g ${RUN_SCRIPT}
  rm ${RUN_SCRIPT}.sedbak
  echo 'Performing base run'
  ${SCRIPT_DIR}/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
  STATUS=$?
  if [ "$STATUS" -ne 0 ]; then
    EXIT_STATUS=$((EXIT_STATUS + 1))
  fi
else
    echo 'Found base run'
fi # OVERWRITE
#################### perform update test              ####################
CMODES="u ur un um uo urn urm uro unm uno umo urnm urno urmo unmo urnmo"
if string_in_list $MD $CMODES; then
  cd ${REFERENCE} 
  if [ "${OVERWRITE}" == 'yes' -o ! -d ${REFERENCE}/experiments/${EXP1} ] ;then 
    if [ ! -f run/exp.${SCRIPT}.run -o "$FORCE_MRS" == 'yes' ]; then
      ${MODEL_DIR}/make_runscripts ${SCRIPT} 1> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
    fi
    if [ ! -d experiments ]; then
      mkdir experiments
    fi
    cd run
    if [ ! -f exp.${SCRIPT}.run ]; then
      echo 'reference model: '$REFERENCE
      echo "did not find base runscript for reference model exp.${SCRIPT}.run"
      exit 1
    else
      echo "found base runscript exp.${SCRIPT}.run"
    fi
    RUN_SCRIPT=exp.${EXP1}.run
    cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
    sed -i.sedbak s/${SCRIPT}/${EXP1}/g ${RUN_SCRIPT}
    rm ${RUN_SCRIPT}.sedbak
    echo 'Performing update test (run reference model)'
    ${REFERENCE}/run/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
  else
    echo 'found run of reference model (update test)'
  fi # OVERWRITE
  diff_results $MODEL_DIR $EXP1 $REFERENCE $EXP1 "update"
  # compare update with base run
  if [ "$DIFF_STATUS" == 0 ]; then
    EXIT_STATUS=$(($EXIT_STATUS + 0))
  else
    EXIT_STATUS=$(($EXIT_STATUS + 1))
  fi
fi # MODE
#################### perform restart test             ####################
RESTART_SUCCESS='no'
CMODES="r ur rn rm ro urn urm uro rnm rno rmo urnm urno urmo rnmo urnmo"
if string_in_list $MD $CMODES; then
  if [ "${OVERWRITE}" == 'yes' -o ! -d ${MODEL_DIR}/experiments/${EXP2} ]; then
    copy_experiment ${MODEL_DIR} ${EXP1} ${EXP2}
    if [ $? -ne 0 ]; then
      echo "could not get base experiment ${EXP1} or create new experiment ${EXP2}"
      exit 1
    fi
    echo 'model_dir= ' ${MODEL_DIR}
    RUN_SCRIPT=exp.${EXP2}.run
    cd ${MODEL_DIR}/run/
    cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
    sed -i.sedbak s/restart:=\".false.\"/restart:=\".true.\"/g ${RUN_SCRIPT}
    sed -i.sedbak s/${SCRIPT}/${EXP2}/g ${RUN_SCRIPT}
    rm ${RUN_SCRIPT}.sedbak
    echo 'Performing restart test (running restart)'
    ${SCRIPT_DIR}/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
  else
    echo 'found restart run (restart test)'
  fi # OVERWRITE
  # compare restart with base run
  diff_results $MODEL_DIR $EXP1 $MODEL_DIR $EXP2 "restart"
  if [ "$DIFF_STATUS" == 0 ]; then
    EXIT_STATUS=$(($EXIT_STATUS + 0))
    RESTART_SUCCESS='yes'
  else
    EXIT_STATUS=$(($EXIT_STATUS + 1))
  fi
fi # MODE
#################### perform nproma test              ####################
CMODES="n un rn nm no urn unm uno rnm rno nmo urnm urno unmo rnmo urnmo"
if string_in_list $MD $CMODES; then
  if [ "${OVERWRITE}" == 'yes' -o ! -d ${MODEL_DIR}/experiments/${EXP3} ]; then
    copy_experiment ${MODEL_DIR} ${EXP1} ${EXP3}
    RUN_SCRIPT=exp.${EXP3}.run
    cd ${MODEL_DIR}/run/
    cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
    if [ "$RESTART_SUCCESS" == 'yes' ]; then
      sed -i.sedbak s/restart:=\".false.\"/restart:=\".true.\"/g ${RUN_SCRIPT}
    fi
    N_NPROMA=`grep "nproma=" ${RUN_SCRIPT}`
    N_NPROMA_NEW="nproma=17"
    sed -i.sedbak s/$N_NPROMA/$N_NPROMA_NEW/g ${RUN_SCRIPT}
    sed -i.sedbak s/${SCRIPT}/${EXP3}/g ${RUN_SCRIPT}
    rm ${RUN_SCRIPT}.sedbak
    echo 'Performing nproma test (running with nproma=17)'
    ${SCRIPT_DIR}/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
  else
    echo 'found run with nproma=17 (nproma test)'
  fi # OVERWRITE
  # compare nproma run with base run 
  diff_results $MODEL_DIR $EXP1 $MODEL_DIR $EXP3 "nproma"
  if [ "$DIFF_STATUS" == 0 ]; then
    EXIT_STATUS=$(($EXIT_STATUS + 0))
  else
    EXIT_STATUS=$(($EXIT_STATUS + 1))
  fi
fi # MODE
#################### perform mpi test                 ####################
CMODES="m um rm nm mo urm unm umo rnm rmo nmo urnm urmo unmo rnmo urnmo"
if string_in_list $MD $CMODES; then
  if [ "${OVERWRITE}" == 'yes' -o ! -d ${MODEL_DIR}/experiments/${EXP4} ]; then
    cd ${MODEL_DIR}/run/
    PTEST_POSSIBLE='no'
    MPI=`grep with_mpi exp.${SCRIPT}.run`
    MPIYES='with_mpi="yes"'
    if [ "$MPI" == "$MPIYES" ]; then
      #
      # find out how many nodes and processes per node are in use
      #
      N_NODES=`grep "no_of_nodes=" exp.${SCRIPT}.run`
      N_NODES=${N_NODES#'no_of_nodes='}
      N_PPNODE=`grep "mpi_procs_pernode=" exp.${SCRIPT}.run`
      N_PPNODE=${N_PPNODE#'mpi_procs_pernode='}
      N_PROCS=$(( N_NODES * N_PPNODE ))
      #
      if [ $N_PROCS -gt 1 ]; then
        #
	PTEST_POSSIBLE='yes'
        #
        copy_experiment ${MODEL_DIR} ${EXP1} ${EXP4}
        RUN_SCRIPT=exp.${EXP4}.run
        cd ${MODEL_DIR}/run/
        cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
        #
        if [ "$RESTART_SUCCESS" == 'yes' ]; then
          sed -i.sedbak s/restart:=\".false.\"/restart:=\".true.\"/g ${RUN_SCRIPT}
        fi
        #
        if [ $N_PPNODE -gt 1 ]; then
          #
          # keep number of nodes, and use one process less per node
          #
	  N_NODES_NEW=$N_NODES
          N_PPNODE_NEW=$(( N_PPNODE - 1 ))
          #
          # change script variables
          sed -i.sedbak s/"mpi_procs_pernode=$N_PPNODE"/"mpi_procs_pernode=$N_PPNODE_NEW"/g ${RUN_SCRIPT}
          #
          # change system variables where necessary
          if [ "${TARGET_MACHINE}" == 'blizzard' ]; then
            PPNODE=`grep "# @"     ${RUN_SCRIPT} | grep  " tasks_per_node "`
            PPNODE_NEW=${PPNODE%$N_PPNODE}$N_PPNODE_NEW
            sed -i.sedbak s/"$PPNODE"/"$PPNODE_NEW"/g ${RUN_SCRIPT}
          fi
          if [ "${TARGET_MACHINE}" == 'thunder'  ]; then
            PPNODE=`grep "#SBATCH" ${RUN_SCRIPT} | grep  "ntasks-per-node"`
            PPNODE_NEW=${PPNODE%$N_PPNODE}$N_PPNODE_NEW
            sed -i.sedbak s/"$PPNODE"/"$PPNODE_NEW"/g ${RUN_SCRIPT}
          fi
          #
	else
          #
          # use one node less and keep one process per node
          #
	  N_NODES_NEW=$(( N_NODES - 1 ))
	  N_PPNODE_NEW=$N_PPNODE
          #
          # change script variables
	  sed -i.sedbak s/"no_of_nodes=$N_NODES"/"no_of_nodes=$N_NODES_NEW"/g ${RUN_SCRIPT}
          #
          # change system variables where necessary
          if [ "${TARGET_MACHINE}" == 'blizzard' ]; then
            NODES=`grep "# @"     ${RUN_SCRIPT} | grep  " node "`
            NODES_NEW=${NODES%$N_NODES}$N_NODES_NEW
            sed -i.sedbak s/"$NODES"/"$NODES_NEW"/g ${RUN_SCRIPT}
          fi
          if [ "${TARGET_MACHINE}" == 'thunder'  ]; then
            NODES=`grep "#SBATCH" ${RUN_SCRIPT} | grep  "nodes"`
            NODES_NEW=${NODES%$N_NODES}$N_NODES_NEW
            sed -i.sedbak s/"$NODES"/"$NODES_NEW"/g ${RUN_SCRIPT}
          fi
          #
	fi # N_PPNODE>1
        #
        N_PROCS_NEW=$(( N_NODES_NEW * N_PPNODE_NEW ))
        sed -i.sedbak s/"mpi_total_procs=$N_PROCS"/"mpi_total_procs=$N_PROCS_NEW"/g ${RUN_SCRIPT}
        #
        sed -i.sedbak s/${SCRIPT}/${EXP4}/g ${RUN_SCRIPT}
        rm ${RUN_SCRIPT}.sedbak
        #
        echo "Performing MPI parallelization test for:"
        echo " - number of nodes     = $N_NODES_NEW"
        echo " - processes per node  = $N_PPNODE_NEW"
        echo " - total no. of procs. = $N_PROCS_NEW"
        ${SCRIPT_DIR}/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
        #
      else
        echo "No MPI parallelization test is peformed if: total number of MPI processes = $N_PROCS"
      fi # total number of procs > 1
      #
    else
      echo "No MPI parallelization test is peformed because: $MPI"
    fi # MPI = yes
    #
  else
    echo 'found run with unknown number of processes (mpi test)'
    PTEST_POSSIBLE='yes'
  fi # OVERWRITE
  #
  if [ "${PTEST_POSSIBLE}" == 'yes' ]; then
    # compare mpi run with base run
    diff_results $MODEL_DIR $EXP1 $MODEL_DIR $EXP4 "mpi"
    if [ "$DIFF_STATUS" == 0 ]; then
      EXIT_STATUS=$(($EXIT_STATUS + 0))
    else
      EXIT_STATUS=$(($EXIT_STATUS + 1))
    fi
  fi # PTEST_POSSIBLE
fi # MODE
#################### perform omp test                ####################
CMODES="o uo ro no mo uro uno umo rno rmo nmo urno urmo unmo rnmo urnmo"
if string_in_list $MD $CMODES; then
  if [ "${OVERWRITE}" == 'yes' -o ! -d ${MODEL_DIR}/experiments/${EXP5} ]; then
    cd ${MODEL_DIR}/run/
    OTEST_POSSIBLE='no'
    OMP=`grep with_openmp exp.${SCRIPT}.run`
    OMPYES='with_openmp="yes"'
    if [ "$OMP" == "$OMPYES" ]; then
      #
      # find out how many omp threads are in use
      #
      N_OMP_NUM_THREADS=`grep "export OMP_NUM_THREADS=" exp.${SCRIPT}.run`
      N_OMP_NUM_THREADS=${N_OMP_NUM_THREADS#'export OMP_NUM_THREADS='}
      N_ICON_THREADS=`grep "export ICON_THREADS=" exp.${SCRIPT}.run`
      N_ICON_THREADS=${N_ICON_THREADS#'export ICON_THREADS='}
      #
      if [ $N_OMP_NUM_THREADS -gt 1 ]; then
        #
	OTEST_POSSIBLE='yes'
        #
        copy_experiment ${MODEL_DIR} ${EXP1} ${EXP5}
        RUN_SCRIPT=exp.${EXP5}.run
        cd ${MODEL_DIR}/run/
        cp -f exp.${SCRIPT}.run ${RUN_SCRIPT}
        #
        if [ "$RESTART_SUCCESS" == 'yes' ]; then
          sed -i.sedbak s/restart:=\".false.\"/restart:=\".true.\"/g ${RUN_SCRIPT}
        fi
        #
        N_OMP_NUM_THREADS_NEW=$(( N_OMP_NUM_THREADS - 1 ))
	N_ICON_THREADS_NEW=$(( N_ICON_THREADS - 1 ))
        #
        # change script variables
        sed -i.sedbak s/"export OMP_NUM_THREADS=$N_OMP_NUM_THREADS"/"export OMP_NUM_THREADS=$N_OMP_NUM_THREADS_NEW"/g ${RUN_SCRIPT}
        sed -i.sedbak s/"export ICON_THREADS=$N_ICON_THREADS"/"export ICON_THREADS=$N_ICON_THREADS_NEW"/g ${RUN_SCRIPT}
        #
        # change system variables where necessary
        if [ "${TARGET_MACHINE}" == 'blizzard' ]; then
          THREADS=`grep "# @"     ${RUN_SCRIPT} | grep  " task_affinity "`
          THREADS_NEW=${THREADS%\($N_OMP_NUM_THREADS\)}\($N_OMP_NUM_THREADS_NEW\)
          sed -i.sedbak s/"$PPNODE"/"$PPNODE_NEW"/g ${RUN_SCRIPT}
          THREADS=`grep "# @"     ${RUN_SCRIPT} | grep  " parallel_threads "`
          THREADS_NEW=${THREADS%$N_OMP_NUM_THREADS}$N_OMP_NUM_THREADS_NEW
          sed -i.sedbak s/"$THREADS"/"$THREADS_NEW"/g ${RUN_SCRIPT}
        fi
##        if [ "${TARGET_MACHINE}" == 'thunder'  ]; then
##          THREADS=`grep "#SBATCH" ${RUN_SCRIPT} | grep  "cpus-per-task"`
##          THREADS_NEW=${THREADS%$N_OMP_NUM_THREADS}$N_OMP_NUM_THREADS_NEW
##          sed -i.sedbak s/"$THREADS"/"$THREADS_NEW"/g ${RUN_SCRIPT}
##        fi
        #
        sed -i.sedbak s/${SCRIPT}/${EXP5}/g ${RUN_SCRIPT}
        rm ${RUN_SCRIPT}.sedbak
        #
        echo "Performing OMP parallelization test for $N_OMP_NUM_THREADS_NEW threads"
        ${SCRIPT_DIR}/${RUN_SCRIPT} 1>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output 2>> ${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
        #
      else
        echo "No OMP parallelization test is peformed if: number of OMP threads = $N_OMP_NUM_THREADS"
      fi # total number of omp threads > 1
      #
    else
      echo "No OMP parallelization test is peformed because: $OMP"
    fi # OMP = yes
    #
  else
    echo 'found run with unknown number of threads (omp test)'
    OTEST_POSSIBLE='yes'
  fi # OVERWRITE
  #
  if [ "${OTEST_POSSIBLE}" == 'yes' ]; then
    # compare omp run with base run
    diff_results $MODEL_DIR $EXP1 $MODEL_DIR $EXP5 "omp"
    if [ "$DIFF_STATUS" == 0 ]; then
      EXIT_STATUS=$(($EXIT_STATUS + 0))
    else
      EXIT_STATUS=$(($EXIT_STATUS + 1))
    fi
  fi # OTEST_POSSIBLE
fi # MODE
########################################################################
case $MD in  
  'b') MODE='b(ase)';;
  'u') MODE='u(pdate)';;
  'r') MODE='r(estart)';;
  'n') MODE='n(proma)';;
  'm') MODE='m(pi)';;
  'o') MODE='o(mp)';;
    *) MODE=$MD;;
esac

if [ "$EXIT_STATUS" -eq 0 ]; then
  echo -e "\033[32mtest mode ${MODE}: ${EXPERIMENT} passed all corresponding tests\033[00m"
else
  echo -e "\033[31mtest mode ${MODE}: ${EXPERIMENT} did NOT pass the corresponding tests\033[00m"
  echo -e "\033[31mnumber of tests including base run that FAILED: $EXIT_STATUS\033[00m"
fi
echo $EXIT_STATUS > ${SCRIPT_DIR}/exp.test_icon.run.status
OFILE=${SCRIPT_DIR}/exp.${EXPERIMENT}_$$.output
if [ -s "$OFILE" ]; then
  echo "Detailed output in exp.${EXPERIMENT}_$$.output"
fi
exit $EXIT_STATUS
