VERSION_ = $$Id: amip-R2B4.config 1 2021-11-10 17:43 m212005 $$

SCENARIO = ssp245

# Atmosphere setup

ATMO_GRID_ID = 0013
ATMO_GRID_TYPE = R02B04
ATMO_LEVELS = 47

ATMO_TIME_STEP = PT15M           # 96 time steps per day
ATMO_RADIATION_TIME_STEP = PT90M # 12 time steps per day
ATMO_DYNAMICS_SUBSTEPS = 8
ATMO_BLOCK_SIZE = 16

# Land setup

LAND_REFERENCE_YEAR = 1976

# Switch off ocean
WITH_OCEAN = false
WITH_OBGC = false

OCEAN_GRID_TYPE =
OCEAN_TIME_STEP = PT30M
OCEAN_BLOCK_SIZE =
OCEAN_GRID_ID =
OBGC_EUPHOTIC_LEVELS =
COUPLER_TIME_STEP = PT30M

# Time control

INITIAL_DATE = 1979-01-01
FINAL_DATE = 2015-01-01
INTERVAL = P10Y
OUTPUT_INTERVAL = P1M

[namelists]
  [[icon_master.namelist]]
    [[[master_time_control_nml]]]
      experimentstartdate = $INITIAL_DATE
  [[NAMELIST_atm]]
    [[[echam_phy_nml]]]
      echam_phy_config(1)%lamip = true
    [[[echam_rad_nml]]]
      echam_rad_config(1)%irad_aero = 18
      echam_rad_config(1)%irad_cfc11 = 4
      echam_rad_config(1)%irad_cfc12 = 4
      echam_rad_config(1)%irad_ch4 = 4
      echam_rad_config(1)%irad_co2 = 4
      echam_rad_config(1)%irad_n2o = 4
      echam_rad_config(1)%irad_o3 = 8
      echam_rad_config(1)%isolrad = 1
      echam_rad_config(1)%vmr_co2 =
      echam_rad_config(1)%vmr_ch4 =
      echam_rad_config(1)%vmr_n2o =
      echam_rad_config(1)%lyr_perp =
      echam_rad_config(1)%yr_perp =
    [[[transport_nml]]]
      ihadv_tracer = 52, 2, 2
      itype_hlimit = 3, 4, 4
      ivadv_tracer = 3, 3, 3
      tracer_names = hus, clw, cli
  [[NAMELIST_lnd]]
    with_carbon = false
    [[[jsb_hydro_nml]]]
      snow_depth_max =
    [[[jsb_hd_nml]]]
      .hide = true

[files]

  [[atmosphere]]
    [[[model]]]
      .base_dir = $MODEL_DIR
      [[[[data]]]]
        .sub_dir = data
        lsdata.nc = .
        ECHAM6_CldOptProps.nc = .
	    MACv2.0-SP_v1.nc = .
      [[[[run]]]]
        .method = cp -fv
        .sub_dir = run
        dict.txt = dict.iconam.mpim
    [[[independent]]]
      .sub_dir = independent
      bc_greenhouse_gases.nc = greenhouse_gases/greenhouse_$SCENARIO.nc
      [[[[volcano_aerosols]]]]
        .offsets = -1, 0, 1
        .set label = %year, 2015:2014
        .sub_dir = CMIP6Forcing
        bc_aeropt_cmip6_volc_lw_b16_sw_b14_%year.nc = bc_aeropt_cmip6_volc_lw_b16_sw_b14_$${label}.nc
      [[[[solar_irradiance]]]]
        .sub_dir = solar_radiation/3.2
        bc_solar_irradiance_sw_b14.nc = swflux_14band_cmip6_1850-2299-v3.2.nc
    [[[mapped]]]
      [[[[initial]]]]
        .sub_dir = initial_condition/r0002
        ifs2icon.nc = ifs2icon_1979010100_${ATMO_GRID_TYPE}_G.nc
      [[[[ozone]]]]
        .offsets = -1, 0, 1
        .set label = %year, 2015:2014
        .sub_dir = ozone/r0002
        bc_ozone_%year.nc = bc_ozone_historical_$${label}.nc
      [[[[ocean_surface]]]]
        .sub_dir = sst_and_seaice/r0002
        bc_sic.nc = bc_sic_1979_2016.nc
        bc_sst.nc = bc_sst_1979_2016.nc
      [[[[aerosols]]]]
        .sub_dir = aerosol_kinne/r0002
        bc_aeropt_kinne_lw_b16_coa.nc = .
        bc_aeropt_kinne_sw_b14_coa.nc = .
        bc_aeropt_kinne_sw_b14_fin.nc = bc_aeropt_kinne_sw_b14_fin_1850.nc

  [[land]]
    [[[mapped]]]
      .sub_dir = $ATMO_GRID_ID/land/r0002

#
# Initialize atmosphere only from standard climatology
#
[jobs]
  [[run]]
    nodes = 60
    ocean_nodes = 0
    time_limit = 04:30:00
  [[run_start]]
    .lrestart = false

    [[[namelists]]]

      [[[[icon_master.namelist]]]]
        [[[[[master_nml]]]]]
          lrestart = ${.lrestart}

    [[[files]]]

      [[[[atmosphere]]]]
        [[[[[restart_data]]]]]
          restart_atm_DOM01_data.nc =
        [[[[[restart]]]]]
          restart_atm_DOM01.nc =
  [[post]]
    tasks = 8
    time_limit = 00:10:00
  [[mon]]
    tasks = 4
    time_limit = 00:05:00
