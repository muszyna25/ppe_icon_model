    .remove = output_nml

    [[[parallel_nml]]]
      num_io_procs = 10

    # Switch off DEFAULT output (see also LAND_OUTPUT above)
    [[[output_nml atm_dbg]]]
      .hide = true
    [[[output_nml atm_3d]]]
      .hide = true
    [[[output_nml atm_2d]]]
      .hide = true
