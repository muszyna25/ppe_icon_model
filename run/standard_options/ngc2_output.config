    # Default settings for 'output_nml *'
    [[[output_nml]]]
      filename_format = ${EXP_ID}_<output_filename>_<datetime2>
      filetype = 5
      mode = 1
      output_start = $INITIAL_DATE
      output_end = $FINAL_DATE
      file_interval = $FILE_INTERVAL
      include_last = false

    [[[output_nml atm_2d_30min_mean]]]
      output_filename = atm_2d_30min_mean
