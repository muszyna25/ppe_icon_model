#=============================================================================
# compare the restart files
#
# requires the definition of the following variables
# restart_1, restart_2, diff_file
#
cd $ICON_BASE_PATH/run

# check if a 2nd restart file for a comparison of restart files has
# been created
if [ ! -r $restart_2 ] ; then
  echo "$restart_2 does nor exist"
  check_error 0
  exit 0
fi

${cdo_diff} $restart_1 $restart_2 > $diff_file
grep " 0 of .* records" $diff_file
return_status=$?
if [ $return_status != 0 ] ; then
  cat $diff_file
fi

check_error $return_status "restart files differ"
exit $STATUS
#-------------------------------------------------------------------
