#!/bin/ksh
#-----------------------------------------------------------------------------
# Leonidas Linardakis   MPI-M,   2010-10 
#
# This script creates optimized ICON grids using
# a combination of optimizations
#-----------------------------------------------------------------------------
set -x
#-----------------------------------------------------------------------------
# paths of directories
GRIDDIR=grids
WRKDIR=${basedir}/$GRIDDIR
run_commmand="${start} $bindir/grid_command"
commandFile=command.grid
command=remove_land_points
cd $WRKDIR
#-----------------------------------------------------------------------------

in_grid="iconR2B03-ocean_etopo40_planet.nc"
out_grid="iconR2B03-ocean-only-nodummycell_etopo40_planet.nc"

#-----------------------------------------------------------------------------

echo $command $in_grid  $out_grid > $commandFile
${run_commmand}

#-----------------------------------------------------------------------------
