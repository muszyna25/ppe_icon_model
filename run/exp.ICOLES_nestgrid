                      50.91,   6.40, 'JOYCE01W',
                      50.91,   6.39, 'JOYCE02W',
                      50.91,   6.38, 'JOYCE03W',
                      50.91,   6.37, 'JOYCE04W',
                      50.92,   6.42, 'JOYCE01NE',
                      50.93,   6.43, 'JOYCE02NE',
                      50.94,   6.44, 'JOYCE03NE',
                      50.95,   6.45, 'JOYCE04NE',
                      50.90,   6.42, 'JOYCE01SE',
