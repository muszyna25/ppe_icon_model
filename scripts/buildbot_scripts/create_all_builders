#./addbuilder MISTRAL_nag_serial     --machine $machine       --configureflags="--with-fortran=nag --without-mpi --without-yac"  --builderflags="build_only"  --list $list
#
#./addbuilder MISTRAL_ocean          --machine $machine       --configureflags="--with-fortran=intel   --with-openmp --with-flags=ocean  --disable-atmo --disable-jsbach --disable-psrad  --with-yac=no  --with-yaxt=yes --without-regard-for-quality"  --builderflags="Ocean"  --list $list
#./addbuilder MISTRAL_ocean_intel17  --machine $machine       --configureflags="--with-fortran=intel17 --with-openmp --with-flags=ocean  --disable-atmo --disable-jsbach --disable-psrad  --with-yac=no  --with-yaxt=yes --without-regard-for-quality"  --builderflags="Ocean"  --list $list
#./addbuilder MISTRAL_ocean_intel18  --machine $machine       --configureflags="--with-fortran=intel18 --with-openmp --with-flags=ocean  --disable-atmo --disable-jsbach --disable-psrad  --with-yac=no  --with-yaxt=yes --without-regard-for-quality"  --builderflags="Ocean"  --list $list
#---------------------------------------------------------------

# breeze builders
machine=breeze
./addmachine $machine --list $list
./addbuilder BREEZE_gcc           --machine $machine --build_script="./config/buildbot/breeze_gcc"          --configureflags="--with-fortran=gcc"                  --builderflags="build_only"  --list $list
./addbuilder BREEZE_gcc_openmp    --machine $machine --configureflags="--with-fortran=gcc --with-openmp"    --builderflags="build_only"  --list $list
./addbuilder BREEZE_intel         --machine $machine --configureflags="--with-fortran=intel"                --builderflags="build_only"  --list $list
./addbuilder BREEZE_intel_openmp  --machine $machine --configureflags="--with-fortran=intel --with-openmp"  --builderflags="build_only"  --list $list
./addbuilder BREEZE_nag           --machine $machine --configureflags="--with-fortran=nag"                  --builderflags="build_only"  --list $list


#CSCS builders
machine=daint
./addmachine $machine --list $list
./addbuilder DAINT_CPU_cce        --machine $machine --configureflags="--with-fortran=cray" --builderflags="Active"      --list $list
./addbuilder DAINT_CPU_pgi        --machine $machine --configureflags="--with-fortran=pgi" --builderflags="Active"      --list $list
./addbuilder DAINT_GPU_pgi        --machine $machine --configureflags="--with-fortran=pgi_gpu --enable-gpu --enable-claw=std" --builderflags="Active"  --list $list

#DWD machines
machine=dwd_cray
./addmachine $machine --list $list
./addbuilder DWD_cray            --machine $machine --configureflags="--with-fortran=cray"   --builderflags="build_only"  --list $list

