#!/bin/ksh
%manual
  - produces monthly means of climate experiments
%end

%include <qsub.h>
#=========================================================================
##.AUTHOR  Martin Koehler 1. September 2003
#=========================================================================
#  Define environment variables and export them.
#==========================================================================

%include <config.h>
%include <rcp.h>
%include <trap.h>
%include <setup.h>

export TMPDIR=$PLOTDATA/$TASK.$SMSTRYNO
rm -rf $TMPDIR
mkdir -p -m 775 $TMPDIR

if [[ $SMSTRYNO -gt 1 ]] ; then
  previous=$(($SMSTRYNO - 1))
  rm -rf $PLOTDATA/$TASK.$previous
fi

cd $TMPDIR

#==========================================================================

cat > ./monmeans_clim.met << \++end++
%include <monmeans_clim.met>
++end++

cat > ./monmeans_clim_batch << \++end++
%include <monmeans_clim_batch>
++end++

cat > ./dates.met << \++end++
%include <dates.met>
++end++

cat > ./avgtime.f90 << \++end++
%include <avgtime.f90>
++end++


chmod u+x ./monmeans_clim_batch


inidate=`echo $BASETIME | cut -c 1-8`
initime=`echo $BASETIME | cut -c 9-10`

echo $initime

exp=${EXPVER}
if [[ $FSFAMILY = "/climplot" ]] ; then
  exp=${VERFEXP1:-${EXPVER}}
  locfcrange=$FCRANGE
  locnumber=$NUMBER
  class1=$CLASS1
else
  locfcrange=-99
  locnumber=-99
  class1=rd
fi

# Generate monthly means (e.g. mmean_ehrp_pl_ini20001001_mon200012_n1.grb)

# plot_opt
#  101 (e.g.)
#  1  : single month means
#   1 : seasons means
#    1: whole experiment mean

PLOT_OPT=111
 
nperiods=`metview -b dates.met $FCLENGTH $inidate $PLOT_OPT | grep nmon | sed 's/nmon//' | sed 'y/[],/   /'`
if (( %PLOTPERIOD% <= ${nperiods} )) ; then
  monmeans_clim_batch -a $exp -c $class1 -l $LEVELS -f $FCLENGTH -r $locfcrange -d $inidate -p $PLOT_OPT -x %PLOTPERIOD% -t sfc -n $locnumber -i $initime

# if climplot job then need to rerun for second experiment
  if [[ $FSFAMILY = "/climplot" ]] ; then
    exp=${VERFEXP2:-${EXPVER}}
    monmeans_clim_batch -a $exp -c $class1 -l $LEVELS -f $FCLENGTH -r $locfcrange -d $inidate -p $PLOT_OPT -x %PLOTPERIOD% -t sfc -n $locnumber -i $initime
  fi
fi

%include <endt.h>

