                 filestr&expid, output, lcol)
         varmaps(expid, yy_start[imon], mm_start[imon], mm_len[imon],
                 source_file_sfc, nens, res, display_port, lplot_curve,
                 ecfsdir&"hoaps3/grib/wvpa/HOAPS-G.R30.M01.WVPA.", ".grb", 1, "HOAPS3",
