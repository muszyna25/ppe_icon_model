    map_projection		: "cylindrical",
    area			: gl_area,
    page_frame			: "off",
    subpage_frame_thickness	: 3,
  # subpage_y_length    	: 80,
    subpage_y_position    	: 7,
    coastlines			: coastlines
    )
map_view_40 = mapview(
    map_projection		: "cylindrical",
