# plot

    plot(display[1],mod,cont,ptext1,legend)
    plot(display[2],obs,cont,ptext2,legend)
    if tcrit = -999 then 
 	  plot(display[3],diff,diff_cont_neg,diff_cont_pos,ptext3,legend)
    else
