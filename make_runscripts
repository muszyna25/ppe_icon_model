#       EXPNAME="$name"  memory_model="small" queue="express"
# 
#     fi
#   fi
# fi

#==============================================================================
# special treatment for exp.couple_atmo-radiation
# if [[  $use_target == "mpipc" && $use_openmp == "yes" ]] ; then
#   name=couple_atmo-radiation
#   $make_runscript in_folder=$input_folder in_script=exp.$name in_script=exec.iconrun EXPNAME="$name" openmp_threads=3
# fi
#==============================================================================


#==============================================================================
# Create the postprocessing scripts
#
# NOTE: The postprocessing scripts are all sequential, so we define:
#    with_mpi="no" with_openmp="no"
#==============================================================================
for filename in $post_list
do
  if [[ $filename != *.run && $filename != *~ &&  $filename != *.status  && -r $input_folder/$filename ]] ; then
    $make_runscript in_folder=$input_folder in_script=${filename} out_script=${filename}.run\
    with_mpi="no" with_openmp="no" queue="express" cpu_time="00:30:00"
  fi
done


#==============================================================================
# following is the section for cretaing the restart tests
#==============================================================================

#==============================================================================
# special treatment for test_hat_jww-moist_cld-cnv-vdf
# this includes the restart in the test_hat_jww-moist_cld-cnv-vdf_restart
#
# if [[ $use_target = "blizzard" &&  $use_openmp = "yes" ]] ; then
#   queue="express"
# else
  queue="$use_queue"
# fi

name=test_hat_jww-moist_cld-cnv-vdf

if [ $make_restart_exp = "true" ] ; then
  restart_script=${name}_restart.tmp
  tmp_file=$input_folder/$restart_script
cat > $tmp_file << EOF
restart_from_folder="$name"
restart_atmo_from="restart.iconR2B04-grid_20080902T000000Z_atm.nc"
EXPNAME=${name}_restart
EOF

  $make_runscript in_folder=$input_folder in_script=exp.$name in_script=exec.iconrun\
    in_script=$restart_script in_script=exp.$name in_script=exec.iconrun EXPNAME="$name"\
    queue="$queue" cpu_time="02:00:00"

  rm $tmp_file
fi

# postprocessing for comparing the restarts
if [ $make_restart_post = "true" ] ; then
  restart_1="../experiments/${name}/restart.iconR2B04-grid_20080903T000000Z_atm.nc"
  restart_2="../experiments/${name}_restart/restart.iconR2B04-grid_20080903T000000Z_atm.nc"
  out_file=${name}_compare_restarts.diff
  $make_runscript in_folder=$input_folder in_script=post.test_compare_restarts out_script=post.${name}_compare_restarts.run\
    with_mpi="no" with_openmp="no" queue="express" cpu_time="00:30:00" \
    restart_1="$restart_1" restart_2="$restart_2"  diff_file="$out_file"
fi


#==============================================================================
# special treatment for test_hat_jww
# this includes the restart in the test_hat_jww_restart
#
name=test_hat_jww

if [ $make_restart_exp = "true" ] ; then
  restart_script=${name}_restart.tmp
  tmp_file=$input_folder/$restart_script
cat > $tmp_file << EOF
restart_from_folder="$name"
restart_atmo_from="restart.iconR2B04-grid_20080906T000000Z_atm.nc"
EXPNAME=${name}_restart
EOF

  $make_runscript in_folder=$input_folder in_script=exp.$name in_script=exec.iconrun\
    in_script=$restart_script in_script=exp.$name in_script=exec.iconrun EXPNAME="$name"\
    queue="$use_queue" cpu_time="04:00:00"

  rm $tmp_file
fi

# postprocessing for comparing the restarts
if [ $make_restart_post = "true" ] ; then
  restart_1="../experiments/${name}/restart.iconR2B04-grid_20080911T000000Z_atm.nc"
  restart_2="../experiments/${name}_restart/restart.iconR2B04-grid_20080911T000000Z_atm.nc"
  out_file=${name}_compare_restarts.diff
  $make_runscript in_folder=$input_folder in_script=post.test_compare_restarts out_script=post.${name}_compare_restarts.run\
    with_mpi="no" with_openmp="no" queue="express" cpu_time="00:30:00" \
    restart_1="$restart_1" restart_2="$restart_2"  diff_file="$out_file"
fi


#==============================================================================
# special treatment for exp.test_hom_lsm
# this includes the restart in the exp.test_hom_lsm_restart
#
queue="express"

name=test_hom_lsm

if [ $make_restart_exp = "true" ] ; then
  restart_script=${name}_restart.tmp
  tmp_file=$input_folder/$restart_script
cat > $tmp_file << EOF
restart_from_folder="$name"
restart_ocean_from="restart.iconR2B04-ocean_etopo40_planet_20010101T120000Z_oce.nc"
EXPNAME=${name}_restart
EOF

  $make_runscript in_folder=$input_folder in_script=exp.$name in_script=exec.iconrun\
    in_script=$restart_script in_script=exp.$name in_script=exec.iconrun EXPNAME="$name"\
    mpi_procs=1 queue="$queue" cpu_time="01:00:00"

  rm $tmp_file
fi

# postprocessing for comparing the restarts
if [ $make_restart_post = "true" ] ; then
  restart_1="../experiments/${name}/restart.iconR2B04-ocean_etopo40_planet_20010102T000000Z_oce.nc"
  restart_2="../experiments/${name}_restart/restart.iconR2B04-ocean_etopo40_planet_20010102T000000Z_oce.nc"
  out_file=${name}_compare_restarts.diff
  $make_runscript in_folder=$input_folder in_script=post.test_compare_restarts out_script=post.${name}_compare_restarts.run\
    with_mpi="no" with_openmp="no" queue="express" cpu_time="00:30:00" \
    restart_1="$restart_1" restart_2="$restart_2"  diff_file="$out_file"
fi

#==============================================================================
# special treatment for test_nh35_tri_jws
# this includes the restart in the exp.test_nh35_tri_jws_restart
#
#queue="default"
queue="$use_queue"

name=test_nh35_tri_jws

if [ $make_restart_exp = "true" ] ; then
  restart_script=${name}_restart.tmp
  tmp_file=$input_folder/$restart_script
cat > $tmp_file << EOF
restart_from_folder="$name"
restart_atmo_from="restart.iconR2B04-grid_20080907T000000Z_atm.nc"
EXPNAME=${name}_restart
EOF

  $make_runscript in_folder=$input_folder in_script=exp.$name in_script=exec.iconrun\
    in_script=$restart_script in_script=exp.$name in_script=exec.iconrun EXPNAME="$name"\
    queue="$queue" cpu_time="03:00:00" memory_model="small"
        
  rm $tmp_file
fi

# postprocessing for comparing the restarts
if [ $make_restart_post = "true" ] ; then
  restart_1="../experiments/${name}/restart.iconR2B04-grid_20080913T000000Z_atm.nc"
  restart_2="../experiments/${name}_restart/restart.iconR2B04-grid_20080913T000000Z_atm.nc"
  out_file=${name}_compare_restarts.diff
  $make_runscript in_folder=$input_folder in_script=post.test_compare_restarts out_script=post.${name}_compare_restarts.run\
    with_mpi="no" with_openmp="no" queue="express" cpu_time="00:30:00" \
    restart_1="$restart_1" restart_2="$restart_2"  diff_file="$out_file"
fi
