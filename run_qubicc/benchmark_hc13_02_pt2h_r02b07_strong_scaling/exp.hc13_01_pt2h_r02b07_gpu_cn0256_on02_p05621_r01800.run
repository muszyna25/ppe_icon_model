# time mean variables, 2-dimensional
# ----------------------------------
cat >> ${atmo_namelist} << EOF
&output_nml
 output_filename  = "${EXPNAME}_flx2d"
 filename_format  = "<output_filename>_<levtype_l>_<datetime2>"
 filetype         = 5
 remap            = 0
 operation        = 'mean'
 output_grid      = .TRUE.
 output_start     = "${start_date}"
