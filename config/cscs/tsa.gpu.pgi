#!/bin/bash

set -eu

SCRIPT_DIR=$(cd "$(dirname "$0")"; pwd)
ICON_DIR=$(cd "${SCRIPT_DIR}/../.."; pwd)

MODULES='PrgEnv-pgi/20.4 cuda netcdf netcdf-fortran'

# Requirements
if [ -z "${XML2_ROOT+x}" ]; then
    echo "Warning : XML2_ROOT is not set"
    #TODO remove:
    XML2_ROOT=/project/g110/install/tsa/libxml2
fi
if [ -z "${SERIALBOX2_ROOT+x}" ]; then
    echo "Warning : SERIALBOX2_ROOT is not set, please use spack or set manually, if you intend to use serialization"
    #TODO remove:
    SERIALBOX2_ROOT=/project/g110/spack-install/tsa/serialbox/2.6.0/gcc/64gamapk5fhsyyv6h6ktjzeeq6oodhe3
fi
if [ -z "${CLAW+x}" ]; then
    echo "Warning: CLAW is not set, please use spack or set manually if you intend to use CLAW"
    #TODO remove:
    CLAW=/project/g110/spack-install/tsa/claw/2.0.1/pgi/nbjs3thtbh5wxrxu6usftgibac6laxyc/bin/clawfc
fi

# LIBS
XML2_LIBS='-lxml2'
BLAS_LAPACK_LIBS='-llapack -lblas'
SERIALBOX2_LIBS='-lSerialboxFortran'
NETCDF_LIBS='-lnetcdf -lnetcdff'
# The rest of libraries required by CUDA will be provided by PGI compiler:
STDCPP_LIBS='-lstdc++'

################################################################################

BUILD_ENV=". \"${SCRIPT_DIR}/module_switcher\"; module use /apps/arolla/UES/jenkins/RH7.7/MCH-PE20.08/generic/easybuild/modules/all/; switch_for_module ${MODULES}; export LD_LIBRARY_PATH=\"${XML2_ROOT}/lib:\${LD_LIBRARY_PATH}\";"

# We need some of the environment variables set by the modules now:
eval "$BUILD_ENV"

CC='mpicc'
CFLAGS='-g -O2'
CPPFLAGS="-I${XML2_ROOT}/include/libxml2 -I${EBROOTNETCDF}/include"

FC='mpif90'
FCFLAGS="-g -traceback -O -Mrecursive -Mallocatable=03 -acc=verystrict -ta=nvidia:cc70 -ta=tesla:lineinfo -Minfo=accel,inline -I${SERIALBOX2_ROOT}/include -I${EBROOTNETCDFMINFORTRAN}/include -D__SWAPDIM -D__USE_G2G"

LDFLAGS="-L${SERIALBOX2_ROOT}/lib -L${XML2_ROOT}/lib -L${EBROOTNETCDF}/lib64 -L${EBROOTNETCDFMINFORTRAN}/lib"

# ICON executable will be linked to /opt/cray/pe/lib64/libmpichf90_pgi.so.3,
# which depends on libomptarget.so but doesn't have an RPATH to it. For this
# reason, it becomes impossible to run the executable without setting
# LD_LIBRARY_PATH in advance (e.g. by loading an environment module). To solve
# this issue, we overlink to libomptarget.so so that it can be found through
# RPATH entries of the executable, which are injected by the compiler.
LIBS="-L${CUDA_HOME}/lib64 -lcudart -Wl,--as-needed ${XML2_LIBS} ${BLAS_LAPACK_LIBS} ${SERIALBOX2_LIBS} ${STDCPP_LIBS} ${NETCDF_LIBS}"

# We have to tell CLAW where to look for netcdf.inc:
CLAWFLAGS="-I${EBROOTNETCDFMINFORTRAN}/include"

NVCC='nvcc'
NVCFLAGS='--std=c++11 -arch=sm_70 -g -O3 -lineinfo -G'

SB2PP="python2 /project/g110/spack-install/tsa/serialbox/2.6.0/pgi/za4eti6fu7ghq5cqs6qhj5wi5v5lyffb/python/pp_ser/pp_ser.py" \

#MPI_LAUNCH='/apps/daint/UES/xalt/production/bin/srun -p debug -C gpu'
MPI_LAUNCH=false

EXTRA_CONFIG_ARGS='--disable-loop-exchange --disable-ocean --disable-claw --enable-gpu --enable-rte-rrtmgp'

# Speed up the configuration by disabling MPI checks:
EXTRA_CONFIG_ARGS+=' --disable-mpi-checks --disable-coupling'

################################################################################
"${ICON_DIR}/configure" \
BUILD_ENV="$BUILD_ENV" \
CC="$CC" \
CFLAGS="$CFLAGS" \
CLAW="$CLAW" \
CLAWFLAGS="$CLAWFLAGS" \
CPPFLAGS="$CPPFLAGS" \
FC="$FC" \
FCFLAGS="$FCFLAGS" \
LDFLAGS="$LDFLAGS" \
LIBS="$LIBS" \
MPI_LAUNCH="$MPI_LAUNCH" \
NVCC="$NVCC" \
NVCFLAGS="$NVCFLAGS" \
SB2PP="python2 /project/g110/spack-install/tsa/serialbox/2.6.0/pgi/za4eti6fu7ghq5cqs6qhj5wi5v5lyffb/python/pp_ser/pp_ser.py" \
${EXTRA_CONFIG_ARGS} \
"$@"

for arg in "$@"; do
  case $arg in
    -help | --help | --hel | --he | -h | -help=r* | --help=r* | --hel=r* | --he=r* | -hr* | -help=s* | --help=s* | --hel=s* | --he=s* | -hs*)
      test -n "${EXTRA_CONFIG_ARGS}" && echo '' && echo "This wrapper script ('$0') calls the configure script with the following extra arguments, which might override the default values listed above: ${EXTRA_CONFIG_ARGS}"
      exit 0 ;;
  esac
done

# Copy runscript-related files when building out-of-source:
if test $(pwd) != $(cd "${ICON_DIR}"; pwd); then
  echo "Copying runscript input files from the source directory..."
  rsync -uavz ${ICON_DIR}/run . --exclude='*.in' --exclude='.*' --exclude='standard_*'
  ln -sf -t run/ ${ICON_DIR}/run/standard_*
  ln -sf set-up.info run/SETUP.config
  rsync -uavz ${ICON_DIR}/externals . --exclude='.git' --exclude='*.f90' --exclude='*.F90' --exclude='*.c' --exclude='*.h' --exclude='*.Po' --exclude='tests' --exclude='rrtmgp*.nc' --exclude='*.mod' --exclude='*.o'
  rsync -uavz ${ICON_DIR}/make_runscripts .
  ln -sf ${ICON_DIR}/data
  ln -sf ${ICON_DIR}/vertical_coord_tables
fi

