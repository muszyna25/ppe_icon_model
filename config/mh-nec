*sx9artftromp)

    # Specific flags for selected configuration
    with_mpi=no
    with_openmp=yes

    FC       = sxf90
    F77      = sxf90
    CC       = sxc++

    CFLAGS     = $CFLAGS -DNOMPI $FTRFLAGS
    FbaseFLAGS =    -sx9 -DNOMPI $FTRFLAGS $OMPFLAGS -D__ICON_ART
