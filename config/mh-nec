# standard flags for C compiler
SVNVERSION=`svnversion`
CFLAGS  = -Xa -Kstd=c99 -Chopt -DHAVE_LIBNETCDF -DHAVE_CF_INTERFACE -DHAVE_LIBGRIB -DHAVE_LIBGRIB_API -I/gfs/essjob/grib_api-1.13.1/include -D__SVN_VERSION="${SVNVERSION}"

NETCDFROOT = /gfs/essjob/NetCDF/F03-size_t64
