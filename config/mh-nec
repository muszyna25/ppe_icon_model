    ;;

*sx9mpidebugcheck)

    # Specific flags for selected configuration
    with_mpi=yes
    with_openmp=no

    FC       = sxmpif90
    F77      = sxmpif90
    CC       = sxmpic++

    CFLAGS     = $CFLAGS
