#INLINE   = $INLINE -pi expin=../../../src/atm_phy_edmf/mo_vdfsat.f90
#INLINE   = $INLINE -pi expin=../../../src/atm_phy_nwp/mo_util_phys.f90
#INLINE   = $INLINE -pi rexp=tracer_q1_q2,tracer_q3,disp_new,dxg,regrot,turnwi
