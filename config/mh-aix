# AIX
#-----------------------------------------------------------------------------
#===============================================
# some common settings

LAPACKROOT  =
LAPACK_LIB  =

LIBS        = -L../lib -lsupport $LIBS
load_modules= SVN/1.7.5 NCL/6.0.0-beta cdo/default

#===============================================
#
# Define compiler settings
#
case "$fortran_compiler" in
    default|ibm|xlf)
      config_compiler=xlf
      CC       = mpcc_r
      OPTFLAGS = -q64 -O2  -qmaxmem=-1 -qstrict -qarch=pwr6 -qtune=auto -qcache=auto -qfloat=fltint
#      INFOFLAGS= -qlistopt -qreport=hotlist -qphsinfo -bnoquiet -V
#      INFOFLAGS= -qlistopt -qreport=hotlist
      INFOFLAGS= -qlistopt
      GENFLAGS = $INFOFLAGS 
      CFLAGS   = $GENFLAGS -Dextname -DHAVE_LIBNETCDF -DHAVE_CF_INTERFACE -qlanglvl=stdc99
      FC       = mpxlf_r
      FC       = mpxlf2003_r
     
      DEBUG_FLAGS = -O0 -g -qcheck -qstackprotect=all -WF,-DNOXLFPROCESS
      BASIC_OPT_FLAGS = -qalias_size -q64 -qmaxmem=-1 -qarch=pwr6 -qtune=auto -qcache=auto -qfloat=fltint -WF,-D__LOOP_EXCHANGE      
      STD_FLAGS = -O2 -qstrict -qlinedebug "$BASIC_OPT_FLAGS" "$INFOFLAGS"  -qspillsize=32648
      HIOPT_FLAGS = -O3 -qhot -qstrict -qarch=pwr6 -qtune=balanced -qcache=auto -qxflag=nvectver -qxflag=nsmine -qfloat=fltint -qessl -q64 -qmaxmem=-1  -qlinedebug  -WF,-D__LOOP_EXCHANGE -WF,-DHAVE_FAST_MATH_LIB -WF,-DHAVE_MASS
      FFLAGS   = $GENFLAGS -qextname -qsuffix=cpp=f90 -qzerosize -qalias_size=1800000000
      F77      = mpxlf_r
      F77FLAGS = $GENFLAGS -g -qextname  -qessl 
    #  LDFLAGS  = -V  -qextname -qsuffix=cpp=f90 -qzerosize -qalias_size=1800000000  -qessl -qsmp=omp -O3 -qhot -qstrict
    #  OMPFLAG  = -qsmp=omp:stackcheck
      OMPFLAG  = -qsmp=omp
      DEFOPT   = -WF,-D
      DEFCOPT  = -D
      MODOPT   = -I
      MODDIR   = -qmoddir=

      IHPCT_BASE = /usr/lpp/ppe.hpct
      HPM_INCL  = -I$IHPCT_BASE/include
      HPM_LIB  = -L$IHPCT_BASE/lib64 -lhpc -lm -lpmapi
      
    ;;
    
    gcc)
      config_compiler=gcc
      CC          = gcc
      FCPP        = -xf95-cpp-input
      FLANG       = -std=f2003 -fmodule-private -fimplicit-none -fmax-identifier-length=31 -ffree-line-length-99
      FWARN       = -Wall -Wcharacter-truncation -Wconversion -Wunderflow -Wunused-parameter
      FDEBUG      = -fbacktrace -fbounds-check
      FCHECK      = -finit-real=nan
      FOPTIONS    = "$FCPP" "$FLANG" "$FWARN" "$FDEBUG" "$FCHECK"
      CC          = gcc
      CFLAGS      =  -O2 -DHAVE_LIBNETCDF -DHAVE_CF_INTERFACE
      FC          = gfortran
      FFLAGS      = -O2 -ffast-math "$FOPTIONS"
      F77         = gfortran
      F77FLAGS    =
      OMPFLAG     = -fopenmp
      DEFOPT      = -D
      DEFCOPT     = -D
      MODOPT      = -I
      MODDIR      = -J

      load_modules="GCC/gcc-4.5.1" "${load_modules}"
      ;;
esac
#===============================================

#===============================================
#
# define site dependend library paths
#
case $ac_sitename in 
  dkrz.de)
    #  pwr6
    config_target=blizzard
  #   load_modules="IBM/xlf13.1.0.8" "IBM/xlc11.1.0.8" "${load_modules}"
    load_modules="IBM/xlf14.1.0.2" "IBM/xlC12.1.0.2" "IBM/xlc12.1.0.2" "${load_modules}"
    
    NETCDFROOT  = /sw/aix61/netcdf-4.2.1.1-64bit-threadsafe
    # NETCDF_LIB  = -lnetcdff -lnetcdf 
    HDF5ROOT    = /sw/aix61/hdf5-1.8.9-64bit-threadsafe
    # HDF5_LIB   = -lhdf5 -lhdf5_hl  
    ZLIBROOT   = /sw/aix61/zlib-1.2.8
    # ZLIB_LIB   = -lz 
    SZIPROOT   = /sw/aix61/szip-2.1-64bit-threadsafe
    # SZIP_LIB   = -lsz
    OTHER_LIBS =  -L/sw/aix61/curl-7.21.3/lib -lcurl
    CFLAGS   = $CFLAGS -DHAVE_NETCDF4
    
    LAPACKROOT  = /sw/aix53/lapack-3.2.0
   # LAPACK_LIB  = -llapack -lessl -lblas
    LAPACK_LIB  = -lmass -lmassvp6  -L/sw/aix53/lapack-3.2.0/lib -llapack -lessl -lblas
    MPIROOT=/usr/lpp/ppe.poe
    
    load_profile="." "/client/etc/profile.blizzard"
#    make_command="/sw/aix61/qnq/0.0.5/bin/qnq" "-n" "32" "-c" "cluster" "-w" "03:50:00" "make" "-j" "32"
    make_command="make" "-j" "4"
    mpi_startrun=poe
    submit="llsubmit"
    sync_submit=llsubmit -s
    use_shell=/bin/bash

    HIOPT_FLAGS = "$HIOPT_FLAGS" -WF,-D__MULTIPLE_MPI_THREADS
    ;;

  ecmwf.int)

    #  pwr6 or 7
    config_target=blizzard
 
    # modules will be loaded manually (fortran/xlf/13.1.0.7 )
    load_modules=""

    NETCDFROOT  = /usr/local/apps/netcdf/3.6.3/LP64
    # increased level of optimization to "-O3" for ECMWF config
    STD_FLAGS = -O3 -qstrict -g "$BASIC_OPT_FLAGS" "$INFOFLAGS"  -qspillsize=32648
    # optional debuging flags
    # STD_FLAGS = -qstrict -g -qnooptimize -qsmp=noopt -qfullpath "$BASIC_OPT_FLAGS" "$INFOFLAGS"  -qspillsize=32648
    # GRIB_API support:    
    CFLAGS = "$CFLAGS" -DHAVE_LIBGRIB -DHAVE_LIBGRIB_API -I/usr/local/lib/metaps/lib/grib_api/1.11.0/include -I/usr/local/apps/jasper/1.900.1/LP64/include
    LIBS   = "$LIBS" -L/usr/local/lib/metaps/lib/grib_api/1.11.0/lib -L/usr/local/apps/jasper/1.900.1/LP64/lib -lgrib_api_f90 -lgrib_api -ljasper

    load_profile="." "/etc/profile"
    make_command="gmake" "-j" "4"
    mpi_startrun=poe
    submit="llsubmit"
    sync_submit=llsubmit -s
    use_shell=/bin/bash

#   need to define that we are at ecmwf to adjust the util_sysonfo.c
    CFLAGS   = "$CFLAGS" -D_ECMWF

    #--- host-dependent paths
    case $ac_hostname in
    c2a*)
      LAPACKROOT  = /usr/local/apps/lapack/3.1.1/LP64
      LAPACK_LIB_PATH  = "$LAPACKROOT"
      LAPACK_LIB  = -llapack -llapack_essl -lblas
      MPIROOT=
      ;;
    *)
      echo Unknown \(to mh-aix\) ECMWF host. Here I dunno any further.
      exit 1
      ;;
    esac

    ;;
esac
