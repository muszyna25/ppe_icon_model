/
EOF
 
#-----------------------------------------------------------------------------


cp -p ${outbasedir}/bin/prep_icon ./prep_icon

echo "job::start"
date
export USE_SIGNAL_HANDLING=yes
./prep_icon
echo "job::end"
date


# -------------------------------------------------


# include the "tail" file for remote jobs
%include <end_job.h>

