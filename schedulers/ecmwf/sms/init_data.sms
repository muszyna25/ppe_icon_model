/
&input_field_nml  ! geopotential
 inputname      = "FI"
 outputname     = "GEOP_H" 
 code           = 129
 type_of_layer  = "hybridLayer" 
/
&input_field_nml  ! specific humidity
 inputname      = "QV"
 outputname     = "QV" 
 code           = 133
 type_of_layer  = "hybridLayer" 
/
&input_field_nml  ! cloud liquid water content
 inputname      = "CLWC"
 outputname     = "QC" 
 code           = 246
 type_of_layer  = "hybridLayer" 
/
&input_field_nml  ! cloud ice content
 inputname      = "CIWC"
 outputname     = "QI" 
