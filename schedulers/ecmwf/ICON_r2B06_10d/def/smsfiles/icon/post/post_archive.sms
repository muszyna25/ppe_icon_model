# include the standard header file
%include <init_ecgate_submit.h>

# -------------------------------------------------

echo "POST_ARCHIVE.SMS" 


ldeldata=1


#-----------------------------------------------------------------------------
# directories

gatedir="/scratch/ms/de/deia/icon_data/%SUITE_NAME%/%SUITE%/%YMD%%INIHOUR%"
ecfsdir="ec:icon/experiments/%SUITE%_%SUITE_NAME%/%YMD%%INIHOUR%"
emkdir -p $ecfsdir


#-----------------------------------------------------------------------------
# archive plots and tranfer to DWD by ectrans

tar cvfz metplots_%SUITE%_%YMD%%INIHOUR%.tgz metplots
ecp      metplots_%SUITE%_%YMD%%INIHOUR%.tgz $ecfsdir

tar cvfz meteogram_%SUITE%_%YMD%%INIHOUR%.tgz meteo
ecp      meteogram_%SUITE%_%YMD%%INIHOUR%.tgz $ecfsdir


#-----------------------------------------------------------------------------
# delete grib data

if [[ $ldeldata = 1 ]] ; then
  gatedir="/scratch/ms/de/deia/icon_data/%SUITE_NAME%/%SUITE%/%YMD%%INIHOUR%"
  cd $gatedir
  \rm -rf grb_data 
fi



# -------------------------------------------------

# include the standard "tail" file
%include <tail.h>

