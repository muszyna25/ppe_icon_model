# include the standard header file
%include <init_ecgate_submit.h>

# -------------------------------------------------

echo "EOM_ARCHIVE.SMS" 


ldeldata=0


#-----------------------------------------------------------------------------
# directories

YYYYMM=`echo %YMD% | cut -c 1-6`
EXPDIR="/scratch/ms/de/deia/icon_data/%SUITE_NAME%/%SUITE%/$YYYYMM"
cd ${EXPDIR}
ecfsdir="ec:icon/experiments/%SUITE%_%SUITE_NAME%/$YYYYMM"


#-----------------------------------------------------------------------------
# archive plots to ecfs

tar cvf metplots_%SUITE%_$YYYYMM.tar metplots
gzip    metplots_%SUITE%_$YYYYMM.tar
ecp     metplots_%SUITE%_$YYYYMM.tar.gz $ecfsdir


#-----------------------------------------------------------------------------
# delete grib data

if [[ $ldeldata = 1 ]] ; then
  \rm -rf grb_data 
fi



