	  echo '$(src_prefix)src/io/shared/mo_util_nml.@OBJEXT@:| support/nml_annotate.@OBJEXT@' && \
	  echo '$(src_prefix)src/shared/mo_expression.@OBJEXT@:| support/util_arithmetic_expr.@OBJEXT@' && \
	  echo '$(src_prefix)src/shared/mo_util_backtrace.@OBJEXT@:| support/util_backtrace.@OBJEXT@' && \
	  echo '$(src_prefix)src/shared/mo_util_hash.@OBJEXT@:| support/util_hash.@OBJEXT@' && \
	  echo '$(src_prefix)src/shared/mo_util_stride.@OBJEXT@:| support/util_stride.@OBJEXT@' && \
